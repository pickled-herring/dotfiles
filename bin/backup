#!/bin/sh

# Backup utility for local home file.
# Usage: backup </path/to/destination>

DEST=$1
DATE=$(date -I)
HOST=$(uname -n)

if [ ! -d $DEST ]; then
		echo "$DEST not found, creating"
		mkdir -p $DEST
fi

ARCHIVE="$HOST-$DATE.tgz"

tar -czvf $DEST/$ARCHIVE $HOME --exclude=.cache --exclude=$DEST
echo "saved to $DEST/$ARCHIVE"
