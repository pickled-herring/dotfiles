#!/bin/bash
# This is a quick way to get the gruvbox look on gnome terminals
if [[ $(echo $REPO) == "" ]]; then
		echo "no repository folder found, aborting"
		exit 1;
fi
if [[ ! -d $REPO/gnome-terminal-colors ]]; then
		echo "Installing gruvbox theme repository to $REPO:"
		git clone https://github.com/metalelf0/gnome-terminal-colors.git $REPO/gnome-terminal-colors;
else
		echo "found gnome-colors repository, continuing"
fi

echo -e "6\n1\nyes\n\n" | $REPO/gnome-terminal-colors/install.sh >> /dev/null

echo -e "Done!"
